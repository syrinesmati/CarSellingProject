@model Cars.Models.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Create Car";
}

<h2>Create Car</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div>
        <label>Make</label>
        <select asp-for="Car.MakeId" asp-items="@(new SelectList(Model.Makes, "Id", "Name"))"></select>
    </div>
    <div>
        <label>Model</label>
        <select asp-for="Car.ModelId" asp-items="@(new SelectList(Model.Models, "Id", "Name"))"></select>
    </div>
    <div>
        <label>Price</label>
        <input asp-for="Car.Price" />
    </div>
    <div>
        <label>Image</label>
        <input type="file" name="Image" />
    </div>
    <button type="submit">Create</button>
</form>
