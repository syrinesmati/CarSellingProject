@model int

<!-- Edit Button -->
<form asp-action="Edit" asp-controller="Car" asp-route-id="@Model" method="post" class="d-inline">
    <button type="submit" class="btn btn-warning">
        Edit
    </button>
</form>

<!-- Delete Button -->
<form asp-action="Delete" asp-controller="Car" asp-route-id="@Model" method="post" onsubmit="return confirm('Are you sure you want to delete this car?');" class="d-inline">
    <button type="submit" class="btn btn-danger">
        Delete
    </button>
</form>
