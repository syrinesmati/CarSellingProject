@model int

<td class="text-end">
    <div class="btn-group" role="group">
        <a class="btn btn-primary rounded-2 me-1" href="@Url.Action("Edit", "Car", new { id = Model })">
            <i class="far fa-edit"></i> Edit
        </a>
        <form asp-action="DeleteConfirmed" asp-controller="Car" method="post">
            <input type="hidden" name="id" value="@Model" />
            <button onclick="if(!confirm('Are you sure you want to delete this item?')){return false;}"
                    type="submit" class="btn btn-danger rounded-2">
                <i class="fa-solid fa-trash"></i> Delete
            </button>
        </form>
    </div>
</td>
