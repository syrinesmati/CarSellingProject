*@
<td class="text-end">
    <div class="btn-group" role="group">
        <a type="button" class="btn btn-primary rounded-2 me-1" href="@Url.Action("Edit","Model",new {id=Model})" style="background-color : steelblue"><i class="far fa-edit"></i></a>
        <form action="Delete" method="post">
            <button onclick="if(!confirm('Are you sure you want to delete this item?')){return(false)}" type="submit" class="btn btn-danger rounded-2" asp-action="Delete" asp-route-id="@Model"><i class="fa-solid fa-trash"></i> </button>
        </form>
    </div>
</td>
